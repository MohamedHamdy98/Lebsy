<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.SignUpFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_logo"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_below="@id/image_logo"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:elevation="18sp"
            app:cardCornerRadius="10dp"
            app:cardElevation="18sp"
            app:cardBackgroundColor="#FFF">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField"
                style="@style/AuthTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:textColorHint="#646567"
                app:endIconMode="clear_text"
                app:hintTextColor="#FF6969">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_signUp_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardb"
            android:layout_below="@id/card"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="18sp"
            app:cardCornerRadius="10dp"
            app:cardElevation="18sp"
            app:cardBackgroundColor="@color/colorHint">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/cairo_semibold"
                android:padding="8dp"
                android:text="SIGN UP"
                android:drawableRight="@drawable/ic_right_arrow"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</FrameLayout>